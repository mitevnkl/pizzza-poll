<div class="container py-4">
  <%# Add question %>
  <div class="row">
    <div class="col-lg-6">
      <h4 class="p-3 bg-white fw-bolder">Create a question</h4>
      <div class="bg-light p-4 mb-3">
        <%= simple_form_for @question do |f| %>
          <%= f.input :title, label: "Your question", placeholder: "eg. What is your favourite pizza?" %>
          <%= f.input :answers_text, label: "Add possible answers", input_html: {style:"height: 10rem;"}, placeholder: "tip: Hit enter for each answer you want to add" %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <%# Vote %>
    <div class="col-lg-6">
      <h4 class="p-3 bg-white fw-bolder">Most recent questions</h4>
      <% if @questions.length == 0 %>
        <div class="bg-light p-4 mb-4">
          <p class="mb-1 fw-bolder fs-5">ðŸ˜” No questions yet</p>
          <p class="mb-1">Be the first to create a question</p>
        </div>
      <% else %>
        <% @questions.each do |question| %>
          <div class="bg-light p-4 mb-4">
            <%= simple_form_for @vote, url: create_vote_path do |f| %>
              <%= f.hidden_field :question_id, value: question.id %>
              <p class=""><%= question.title %></p>
              <% question.answers_text.split(/\n/).each do |answer| %>
                <p class="mb-3 w-100 bg-white p-3"><%= f.radio_button :answer, answer %>
                <%= answer %></p>
              <% end %>
              <%= f.hidden_field :voter_ip, value: request.remote_ip %>
              <p class="m-0"><%= f.button :submit, "Vote", class:"btn mt-2 btn-outline-primary" %></p>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
